                        //-             a.socials-icons__link.socials-icons__link--type--vk(href="#"): i.fab.fa-vk
                        //-             a.socials-icons__link.socials-icons__link--type--tw(href="#"): i.fab.fa-twitter

                if showFooterMap
                    .footer__map(style='images/footer__map.jpg')

                .footer__bottom
                    .container
                        .row.flex-column.flex-md-row
                            .col-12.col-md-8.d-flex.align-items-center.justify-content-center.justify-content-md-start
                                .footer__copyright
                                    .footer__copyright-text © МФК Котофей. 2020.
                                    a.footer__confidential-link(href='#') Политика конфиденциальности

                            .col-12.col-md-4.d-flex.justify-content-center.justify-content-md-end
                                .footer__developer
                                    span Разработка сайта:
                                    a(href='http://khakasia.ru/' target='_blank') Хакасия.ру                          


            
