            footer.footer

                .footer__middle

                    .footer__middle-top
                        .container
                            .footer__middle-top-inner
                                .row
                                    .col-24.col-lg-12.col-xl-10.d-flex.align-items-center
                                        a.footer__site-logo-link(href="#")
                                            img(src='images/header__logo.svg')
                                    .col-24.col-lg-12.col-xl-14.d-flex.align-items-center.justify-content-end
                                        .header-menu
                                            .header-menu__inner
                                                ul.nav
                                                    li.nav-link: a(href="shops.html"): span.one-lvl Фильмы
                                                    li.nav-link: a(href="shops.html"): span.one-lvl Расписание
                                                    li.nav-link: a(href="shops.html"): span.one-lvl Премьеры
                                                    li.nav-link: a(href="shops.html"): span.one-lvl Зрителям

                    .footer__middle-bottom
                        .container
                            .row
                                .col-24.col-md-8.d-flex.align-items-center.justify-content-center.justify-content-md-start
                                    .footer__address
