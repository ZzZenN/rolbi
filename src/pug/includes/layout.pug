                                        else
                                            .col-24.d-flex.align-items-center
                                                h1 #{pageTitle} 
                                    if showScheduleDays

                                        .swiper-container.schedule-days
                                            ul.nav.nav-tabs.swiper-wrapper
                                                li.nav-item.swiper-slide
                                                    a.nav-link.active.schedule-day(href='test.html')
